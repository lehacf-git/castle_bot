# --- General ---
CASTLE_DB_URL=sqlite:///castle.db
CASTLE_RUNS_DIR=./runs
CASTLE_LOG_LEVEL=INFO

# --- Kalshi ---
# Use demo first.
KALSHI_ENV=demo

# Prefer these names (match many Kalshi setups):
KALSHI_API_KEY_ID=
KALSHI_PRIVATE_KEY_PATH=

# Back-compat (the code accepts either KALSHI_API_KEY_ID or KALSHI_KEY_ID):
KALSHI_KEY_ID=

# Public base URLs (override if needed)
KALSHI_DEMO_ROOT=https://demo-api.kalshi.co/trade-api/v2
KALSHI_PROD_ROOT=https://api.elections.kalshi.com/trade-api/v2

# --- Trading Mode ---
# paper = simulate fills (default)
# demo  = place orders in Kalshi demo env
# prod  = place orders in Kalshi production env
CASTLE_MODE=paper

# --- Strategy params ---
BANKROLL_USD=500
MAX_RISK_PER_MARKET_USD=20
MAX_TOTAL_EXPOSURE_USD=100
MIN_EDGE_PROB=0.03
MAX_SPREAD_CENTS=10
MIN_DEPTH_CONTRACTS=50
MAKER_ONLY=true

# Fee cushion (rough). Set to 0 for paper.
EST_TAKER_FEE_CENTS_PER_CONTRACT=2

# --- News (optional) ---
# Option A: RSS feeds (no key required)
NEWS_FEEDS=
NEWS_LOOKBACK_HOURS=24

# Option B: NewsAPI.org (optional)
NEWS_API_KEY=
NEWSAPI_QUERY=
NEWSAPI_LANGUAGE=en
NEWSAPI_LOOKBACK_HOURS=24

# --- LLM (optional) ---
# Gemini key (optional). If unset, the bot runs without LLM features.
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# Codegen / Analytics provider for 'castle improve propose'
# Options: openai, gemini
CODEGEN_PROVIDER=openai

# OpenAI (recommended for analytics/codegen)
OPENAI_API_KEY=CHANGEME
OPENAI_MODEL=gpt-5.2
OPENAI_BASE_URL=https://api.openai.com/v1
